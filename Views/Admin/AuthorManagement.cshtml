@model IEnumerable<frame.Models.Author>

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h4>AUTHOR MANAGEMENT</h4>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                    <div class="input-group">
                        @using (Html.BeginForm("AdminController","SearchAuthor", FormMethod.Post))
                       {     <input type="text" name="search" class="form-control" value="@ViewBag.search" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">Go!</button>
                        </span>
                       }
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row" style="display: block;">
            <div class="col-md-6 col-sm-6  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>AUTHORS<small>Authors Management Tables</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                            <p>
                                @Html.ActionLink("Create New", "CreateAuthor")
                            </p>

                        <div class="x_content">
                            <table class= "table">
	                <tr>
		<th>
			ID
		</th>
		<th>
			Name 
		</th>
        <th>
			Image 
		</th>
        <th>
			Describe
		</th>
	                </tr>

@foreach (var item in Model)
{
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.idAuthor)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.nameAuthor)
		</td>
        <td>
            <img src="../../images/@item.imgAuthor" src="@item.nameAuthor" width="64"
            height="92">
		</td>
        <td>
            <p class = "content_DesAuthor">
                @Html.DisplayFor(modelItem => item.describeAuthor)
            </p>		
		</td>
			
		<td>
			@Html.ActionLink("Edit", "EditAuthor", new {idAuthor=item.idAuthor}) |
			@Html.ActionLink("Delete", "DeleteAuthor", new { idAuthor = item.idAuthor}) |
		</td>
	</tr>
}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>            
        </div>
    </div>
</div>