@model IEnumerable<frame.Models.Supplier>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h4>SUPPLIER MANAGEMENT</h4>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row" style="display: block;">
            <div class="col-md-6 col-sm-6  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>SUPPLIER<small>Supplier Management Table</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                        <p>
                          @Html.ActionLink("Create New", "CreateSupplier")
                        </p>
                        
                        <div class="x_content">
                            <table class= "table">
	<tr>
		<th>
			ID
		</th>
		<th>
			Name
		</th>
        <th>
			Address 
		</th>
        <th>
			Phone
		</th>
		<th></th>
	</tr>

@foreach (var item in Model)
{
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.idSupplier)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.nameSupplier)
		</td>
        <td>
			@Html.DisplayFor(modelItem => item.addressSupplier)
		</td>
        <td>
			@Html.DisplayFor(modelItem => item.phoneSupplier)
		</td>

			
		<td>
			@Html.ActionLink("Edit", "EditSupplier", new {idSupplier=item.idSupplier}) |
			@Html.ActionLink("Delete", "DeleteSupplier", new { idSupplier = item.idSupplier}) |
		</td>
	</tr>
}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>