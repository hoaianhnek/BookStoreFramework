@model frame.Models.Author
 
@{
    ViewBag.Title = "EditAuthor";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}

<div class="back">
                <a href="../Admin/AuthorManagement" color="white"><h6>Back to list</h6></a>
            </div>
 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
     
    <div class="form-horizontal-edit">
        <div class="khungAut">

        <h4>Edit Author</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.idAuthor)
        <div class="CreateContent">
        <div class="form-group">
            <label class= "col-md-10">Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nameAuthor)
                @Html.ValidationMessageFor(model => model.nameAuthor)
            </div>
        </div>
 
        <div class="form-group">
            <label class= "col-md-10">Image</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.imgAuthor)
                @Html.ValidationMessageFor(model => model.imgAuthor)
            </div>
        </div>
 
        <div class="form-group">
            <label class= "col-md-10">Describe</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.describeAuthor)
                @Html.ValidationMessageFor(model => model.describeAuthor)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    </div>
    </div>
}
 

 