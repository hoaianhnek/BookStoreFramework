@model frame.Models.Category
 
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
    var Category = ViewBag.Category;
}
<div class="right_col" role="main">
    <div class="EditCategory">
        <div class="page-title">
            <div class="title_left">
                <h4>CATEGORY MANAGEMENT</h4>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row" style="display: flex">
            <div class="col-md-6 col-sm-6  " style="height:100vh">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Edit Category</h2>
                        <div class="clearfix"></div>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-row"> 
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold">ID Category</label>
                                <input type="text" class="form-control" name="id" value="@Category.idCategory" disabled>
                            </div> 
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold">Name Category</label>
                                <input type="text" class="form-control"pattern="^[A-Za-z0-9-\s]*" title="Name should without accents" name="name" required="" value="@Category.nameCategory">
                            </div>
                        </div>
                        <br>
                        <div class="modal-footer">
                            <a href="../../Admin/CategoryManagement" name="submit-cancel" class="btn btn-danger">Cancel</a>
                            <input type="submit" name="submit-save" class="btn btn-success" value="Save" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

