@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
    var customer = ViewBag.customer;
    var users = ViewBag.users;
    var shipping = ViewBag.shipping;
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Shipping Management</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row" style="display: block;">
            <div class="col-md-6 col-sm-6  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Shipping</h2>
                        <div class="clearfix"></div>
                    </div>
                     <p>
                        @Html.ActionLink("Create New", "CreateShipping")
                    </p>
                    @if(TempData["StatusUpdateShipping"] != null) {
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss = "alert">&times;</button>
                        @TempData["StatusUpdateShipping"]
                    </div>
                    }
                    @if(TempData["StatusCreateShipping"] != null) {
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss = "alert">&times;</button>
                        @TempData["StatusCreateShipping"]
                    </div>
                    }
                    @if(TempData["StatusDeleteShipping"] != null) {
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss = "alert">&times;</button>
                        @TempData["StatusDeleteShipping"]
                    </div>
                    }
                    <div class="x_content">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Thành Phố</th>
                                    <th>Phí vận chuyển</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var s in shipping)
                                {
                                    <tr>
                                        <th scope="row">@s.idShip</th>
                                        <td>@s.country</td>
                                        <td>@s.charge</td>    
                                        <td class="actionAdmin">
                                            <a href="/Admin/DeleteShipping/@s.idShip" class="btnSubmit">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                            |
                                            <a href="/Admin/EditShipping/@s.idShip">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>                                  
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
	$('.btnSubmit').click(function() {
		var x = confirm("Are you sure you want to delete?");
		if(x) return true;
		else return false;
	});
</script>