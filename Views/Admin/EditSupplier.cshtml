@model frame.Models.Supplier
 
@{
    ViewBag.Title = "EditSupplier";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}

<div class="back">
    <a href="../Admin/SupplierManagement"><h6>Back to list</h6></a>
</div>
 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
     
    <div class="form-horizontal-edit">
         <div class="khungSup">
        <h4>Edit Category</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.idSupplier)
    <div class="CreateContent">
        <div class="form-group">
            <label class= "col-md-10">Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nameSupplier)
                @Html.ValidationMessageFor(model => model.nameSupplier)
            </div>
        </div>

        <div class="form-group">
            <label class= "col-md-10">Address</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.addressSupplier)
                @Html.ValidationMessageFor(model => model.addressSupplier)
            </div>
        </div>
        <div class="form-group">
            <label class= "col-md-10">Phone</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.phoneSupplier)
                @Html.ValidationMessageFor(model => model.phoneSupplier)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    </div>
    </div>
}
 

 