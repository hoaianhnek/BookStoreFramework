@{
    List<Category> book = ViewBag.Category;
}
<div class="topbar">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 text-left">
                <i class="fas fa-map-marker-alt"></i>
                <span>KTX khu B - ĐH quốc gia TPHCM</span>
                <i class="fas fa-mobile"></i>
                <span>0-376-206-***</span>
                <i class="fas fa-envelope"></i>
                <span>17520257@gm.uit.edu.vn</span>
            </div>
            <div class="col-sm-6 text-right">
                <ul class="nav justify-content-end">
                    <li class="topbar-login">
                        <a class="" href="Home/MyAccount">
                            <span>Login</span>
                        </a>
                    </li>
                    <li class="">
                        <a class="" href="#">
                            <span>Help</span>
                        </a>
                        
                    </li>
                </ul>
            </div>
